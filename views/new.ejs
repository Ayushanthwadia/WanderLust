<% layout("/layouts/boilerplate") %>
<body>
  <div class="form-container mt-2">
    <form method="POST" action="/listings" novalidate class="needs-validation">
      <h1>Create a new listing</h1>
      <div class="mb-2">
        <label for="title" class="form-label">Title</label>
        <input
          type="text"
          name="listing[title]"
          placeholder="Enter Title"
          class="form-control"
          required
        />
        <div class="invalid-feedback">valid title required</div>
      </div>

      <div class="mb-2">
        <label for="description" class="form-label">Description</label>
        <textarea
          name="listing[description]"
          placeholder="Enter Description"
          class="form-control"
          required
        ></textarea>
        <div class="invalid-feedback">valid description required</div>
      </div>

      <div class="mb-2">
        <label for="image" class="form-label">Image</label>
        <input
          type="text"
          name="listing[image]"
          placeholder="Enter url/link of the image"
          class="form-control"
          required
        />
        <div class="invalid-feedback">valid image link required</div>
      </div>

      <div class="mb-2">
        <label for="price" class="form-label">Price</label>
        <input
          name="listing[price]"
          placeholder="Enter Price"
          class="form-control"
          type="number"
          required
        />
        <div class="invalid-feedback">valid price required</div>
      </div>

      <div class="mb-2">
        <label for="location" class="form-label">Location</label>
        <input
          type="text"
          name="listing[location]"
          placeholder="Enter Location"
          class="form-control"
          required
        />
        <div class="invalid-feedback">valid location required</div>
      </div>

      <div class="mb-3">
        <label for="country" class="form-label">Country</label>
        <input
          type="text"
          name="listing[country]"
          placeholder="Enter Country"
          class="form-control"
          required
        />
        <div class="invalid-feedback">valid country name required</div>
      </div>

      <div>
        <button class="btn btn-dark add-btn">Add</button>
      </div>
    </form>
  </div>
</body>
